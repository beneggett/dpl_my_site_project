<div class='comment' id="comment-<%= comment.id %>" >
  <h4>
    <span class='pull-right'>
      <%= link_to post_destroy_comment_path(@post, comment), method: :delete,  remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </span>
    <%= comment.author %>
    <small> <%= time_tag(comment.created_at) %> </small>
  </h4>
  <%= simple_format(comment.message) %>
  <hr />
</div>
