<div class='page-header text-center'>
  <h1> My portfolio</h1>
</div>
<% @projects.each do |project| %>
  <div class='col-md-3 col-sm-4 col-xs-6 gutter'>
    <% if project.pictures.first %>
    <%= link_to project_path(project), class: "thumbnail-links", remote: true do %>
      <div class='project-overlay'>
        <h5> <%=project.name %></h5>
        <p> <i class='glyphicon glyphicon-search'></i>View project</p>
      </div>
      <%= image_tag(project.pictures.first.image.url(:medium), class: 'img-responsive') %>
      <% end %>
    <% end %>
  </div>
<% end %>
