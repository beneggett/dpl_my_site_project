<!DOCTYPE html>
<html>
  <head>
    <title>My Site</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% 360.times do |i| %>
      <div class="rainbow-<%= i %>"></div>
    <% end %>
    <section id="content">
      <%= render 'layouts/navigation_bar' %>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>
      <% end %>
      <%= yield %>
    </section>
    <footer>
      <p>&copy;<%= Time.now.year %>, Ben Eggett 
      </p>

    </footer>
  </body>
</html>
